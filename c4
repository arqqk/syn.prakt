<body>
    <div class="container">
        <h2>Дни до Нового года</h2>
        <input type="text" id="dateInput" placeholder="Введите дату в формате дд.мм.гггг">
        <button onclick="calculateDays()">Рассчитать</button>
        <div id="daysResult" class="result"></div>
        <div id="leapResult" class="result"></div>
    </div>

    <script>
        function calculateDays() {
            const dateInput = document.getElementById('dateInput').value;
            const daysResult = document.getElementById('daysResult');
            const leapResult = document.getElementById('leapResult');
            
            // Проверка формата даты
            if (!/^\d{2}\.\d{2}\.\d{4}$/.test(dateInput)) {
                daysResult.textContent = 'Неверный формат даты!';
                leapResult.textContent = '';
                return;
            }
            
            const parts = dateInput.split('.');
            const day = parseInt(parts[0], 10);
            const month = parseInt(parts[1], 10);
            const year = parseInt(parts[2], 10);
            
            // Проверка валидности даты
            const inputDate = new Date(year, month - 1, day);
            if (inputDate.getDate() !== day || inputDate.getMonth() !== month - 1 || inputDate.getFullYear() !== year) {
                daysResult.textContent = 'Неверная дата!';
                leapResult.textContent = '';
                return;
            }
            
            // Расчет дней до Нового года
            const newYear = new Date(year, 11, 31); // 31 декабря текущего года
            let diffTime = newYear - inputDate;
            let diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
            
            // Если дата после 31 декабря, считаем для следующего года
            if (diffDays < 0) {
                const nextNewYear = new Date(year + 1, 11, 31);
                diffTime = nextNewYear - inputDate;
                diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
            }
            
            daysResult.textContent = `До Нового года осталось: ${diffDays} дней`;
            
            // Проверка на високосный год
            const isLeap = isLeapYear(year);
            leapResult.textContent = isLeap ? 'Високосный год' : 'Не високосный год';
        }
        
        function isLeapYear(year) {
            if (year % 4 !== 0) {
                return false;
            } else if (year % 100 !== 0) {
                return true;
            } else {
                return year % 400 === 0;
            }
        }
    </script>
</body>
